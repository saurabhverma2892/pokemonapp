header {

	display: flex;
	flex-direction: column;
	text-align: center;

	.header__cover {
		flex: 3;
		padding: 50px;
		background-color: $green;
		color: white;
	}

	.header__logo{
		color:white;
	}
	
	.header__nav {
		flex: 1;
		background-color: white;
		padding: 20px 0px;

		.header__nav-item {
			display: inline;
			margin: 0px 7px;


			a {
				font-size: 15px;
			}

			a:hover {
				padding: 4px 0px;
				color: $green;
				border-bottom: 1px solid $green;
			}
		}
	}

}